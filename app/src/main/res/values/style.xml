<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="open_sans_font">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textFontWeight">600</item>
    </style>

    <style name="edit_profile_btn" parent="open_sans_font">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/profile_button_text_size</item>
    </style>

    <style name="edit_profile_btn_night" parent="open_sans_font">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/main_text_color_night</item>
        <item name="android:textSize">@dimen/profile_button_text_size</item>
    </style>


    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>


    <style name="TextColor" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/gray_edit_text</item>
        <item name="colorControlActivated">@color/gray_edit_text</item>
    </style>


    <style name="edit_text_auth_activity">
        <item name="android:hint">@string/email</item>
        <item name="android:theme">@style/TextColor</item>
        <item name="barrierDirection">bottom</item>
        <item name="hintAnimationEnabled">@string/email</item>
        <item name="hintEnabled">true</item>
        <item name="hintTextColor">@color/gray_edit_text</item>
        <item name="expandedHintEnabled">true</item>
        <item name="android:textColorHint">@color/gray_edit_text</item>
        <item name="boxBackgroundMode">none</item>
    </style>

</resources>