<?xml version="1.0" encoding="utf-8"?><!--    chains, flow-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/view_color">

    <TextView
        android:id="@+id/textview_label_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/open_sans_font"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@id/google_button"
        app:layout_constraintVertical_bias="0"
        android:gravity="center"
        android:text="@string/let_s_get_acquainted"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textview_label_2"
        style="@style/open_sans_font"
        app:layout_constraintTop_toBottomOf="@id/textview_label_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/fill_out_the_profile_and_go_to_the_application"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/edit_text_auth_activity"
        app:layout_constraintTop_toBottomOf="@id/textview_label_2"
        app:errorEnabled="true"
        android:layout_marginTop="8dp"
        app:helperTextTextColor="@color/error_msg_color">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textColor="@color/white_edit_text" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/edit_text_auth_activity"
        app:layout_constraintTop_toBottomOf="@id/email_container"

        app:counterEnabled="true"
        app:counterMaxLength="16"
        app:errorEnabled="true"
        app:helperTextTextColor="@color/error_msg_color"

        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/gray_edit_text"

        android:hint="@string/password">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLength="16"
            android:textColor="@color/white_edit_text" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/remember_me_checkbox"
        style="@style/open_sans_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:buttonTint="@color/white"
        android:text="@string/remember_me"
        android:textColor="@color/gray_edit_text"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@id/password_container"
        app:layout_constraintBottom_toTopOf="@id/google_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/google_button"
        style="@style/open_sans_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:paddingHorizontal="24dp"
        android:text="@string/google"
        android:textColor="#18181F"
        android:textSize="12sp"
        app:cornerRadius="6dp"
        app:icon="@drawable/google_btn_icon"
        app:iconGravity="textStart"
        app:iconTintMode="multiply"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"

        app:layout_constraintEnd_toStartOf="@id/or_text_view"
        app:layout_constraintTop_toBottomOf="@id/password_container" />

    <TextView
        android:id="@+id/or_text_view"
        style="@style/open_sans_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="@id/google_button"
        app:layout_constraintBottom_toBottomOf="@id/google_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:text="@string/or"
        android:textColor="@color/white"
        android:textSize="18sp" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/register_button"
        style="@style/open_sans_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="36dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/register"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:cornerRadius="6dp"

        android:layout_marginHorizontal="16dp"

        app:layout_constraintTop_toTopOf="@id/google_button"
        app:layout_constraintBottom_toBottomOf="@id/google_button"
        app:layout_constraintStart_toEndOf="@id/or_text_view"

        app:strokeColor="@color/orange"
        app:strokeWidth="2dp"/>

    <TextView
        android:id="@+id/terms_text_view"
        style="@style/open_sans_font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:gravity="center"
        android:text="@string/by_clicking_register_you_agree_to_our_terms_and_conditions"
        android:textColor="@color/white"
        android:textFontWeight="400"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/have_acc_text_view"/>

    <TextView
        android:id="@+id/have_acc_text_view"
        style="@style/open_sans_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/already_have_an_account"
        android:textColor="@color/gray_edit_text"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/terms_text_view"
        app:layout_constraintStart_toStartOf="@id/terms_text_view"/>

    <TextView
        android:id="@+id/sign_in_text_view"
        style="@style/open_sans_font"
        app:layout_constraintTop_toTopOf="@id/have_acc_text_view"
        app:layout_constraintBottom_toBottomOf="@id/have_acc_text_view"
        app:layout_constraintStart_toEndOf="@id/have_acc_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:clickable="true"
        android:text="@string/sign_in"
        android:textColor="@color/white"
        android:textSize="14sp" />

</androidx.constraintlayout.widget.ConstraintLayout>